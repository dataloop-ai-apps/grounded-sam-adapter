{
  "name": "global-sam-adapter",
  "displayName": "Global SAM2 Adapter",
  "description": "SAM2 adapter for global functions",
  "version": "0.1.43",
  "scope": "public",
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/grounded-sam-adapter.git",
    "gitTag": "0.1.43"
  },
  "components": {
    "toolbars": [
      {
        "displayName": "AI Tracker",
        "invoke": {
          "type": "function",
          "namespace": "global-sam.global-sam.track"
        },
        "location": "videoTracker",
        "icon": "icon-dl-video-filled"
      },
      {
        "displayName": "Box to Segmentation",
        "invoke": {
          "type": "function",
          "namespace": "global-sam.global-sam.box_to_segmentation"
        },
        "action": "drawAnnotation",
        "location": "studioAnnotation",
        "conditions": {
          "resources": [
            {
              "entityType": "annotation",
              "filter": {
                "$or": [
                  {
                    "type": "box"
                  }
                ]
              }
            },
            {
              "entityType": "item",
              "filter": {
                "$and": [
                  {
                    "metadata.system.mimetype": "image/*"
                  },
                  {
                    "hidden": false
                  },
                  {
                    "type": "file"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "displayName": "Box to Polygon",
        "invoke": {
          "type": "function",
          "namespace": "global-sam.global-sam.box_to_polygon"
        },
        "action": "drawAnnotation",
        "location": "studioAnnotation",
        "conditions": {
          "resources": [
            {
              "entityType": "annotation",
              "filter": {
                "$or": [
                  {
                    "type": "box"
                  }
                ]
              }
            },
            {
              "entityType": "item",
              "filter": {
                "$and": [
                  {
                    "metadata.system.mimetype": "image/*"
                  },
                  {
                    "hidden": false
                  },
                  {
                    "type": "file"
                  }
                ]
              }
            }
          ]
        }
      }
    ],
    "modules": [
      {
        "name": "global-sam",
        "entryPoint": "adapters/global_sam_adapter/global_sam_adapter.py",
        "className": "Runner",
        "initInputs": [],
        "functions": [
          {
            "name": "track",
            "description": "Sam Video Tracker",
            "input": [
              {
                "name": "dl",
                "type": "Json"
              },
              {
                "name": "item_stream_url",
                "type": "Json"
              },
              {
                "name": "bbs",
                "type": "Json"
              },
              {
                "name": "start_frame",
                "type": "Json"
              },
              {
                "name": "frame_duration",
                "type": "Json"
              }
            ],
            "output": [
              {
                "name": "output_dict",
                "type": "Json"
              }
            ]
          },
          {
            "name": "predict_interactive_editing",
            "description": "Predict Interactive Editing",
            "input": [
              {
                "name": "dl",
                "type": "Json"
              },
              {
                "name": "item",
                "type": "Item"
              },
              {
                "name": "points",
                "type": "Json"
              },
              {
                "name": "bb",
                "type": "Json"
              },
              {
                "name": "color",
                "type": "Json"
              }
            ],
            "output": []
          },
          {
            "name": "box_to_segmentation",
            "description": "Box to Semantic Segmentation",
            "input": [
              {
                "name": "dl",
                "type": "Json"
              },
              {
                "name": "item",
                "type": "Item"
              },
              {
                "name": "annotations",
                "type": "Json[]"
              }
            ],
            "output": [
              {
                "name": "annotation_response",
                "type": "Annotation[]"
              }
            ]
          },
          {
            "name": "box_to_polygon",
            "description": "Box to Polygon",
            "input": [
              {
                "name": "dl",
                "type": "Json"
              },
              {
                "name": "item",
                "type": "Item"
              },
              {
                "name": "annotations",
                "type": "Json[]"
              }
            ],
            "output": [
              {
                "name": "annotation_response",
                "type": "Annotation[]"
              }
            ]
          },
          {
            "name": "get_sam_features",
            "description": "Get SAM2 features",
            "input": [
              {
                "name": "dl",
                "type": "Json"
              },
              {
                "name": "item",
                "type": "Item"
              }
            ],
            "output": []
          }
        ]
      }
    ],
    "services": [
      {
        "name": "global-sam",
        "moduleName": "global-sam",
        "useUserJwt": true,
        "runtime": {
          "podType": "gpu-t4-m",
          "concurrency": 10,
          "runnerImage": "gcr.io/viewo-g/piper/agent/runner/apps/grounded-sam-adapter:0.1.6",
          "autoscaler": {
            "minReplicas": 1,
            "maxReplicas": 7,
            "queueLength": 10
          }
        },
        "executionTimeout": 3600
      }
    ]
  }
}